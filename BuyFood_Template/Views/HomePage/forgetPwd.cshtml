    <script>
        function memberForgetPwd() {
            var forgetPwdMember = {};

            forgetPwdMember.CEmail = $("#iddemo").val();
            forgetPwdMember.CPhone = $("#passdemo").val();

            $.ajax({
                url: "/HomePage/forgetMemberCheck",
                type: "POST",
                data: JSON.stringify(forgetPwdMember),
                dataType: "Json",
                processData: false,
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data == "noEmail") {
                        alert("無此註冊信箱 請重新輸入");
                    }
                    else if (data == "wrongPhone") {
                        alert("註冊手機輸入錯誤 請重新輸入");
                    }
                    else if (data == "EditSuccess") {
                        alert("已將確認信寄出 密碼已被修改成信內的暫時密碼");
                        window.location.assign("/HomePage/Home");
                    }
                    else {
                        alert("發生未知錯誤 請聯絡客服人員");
                    }
                }

            });
        }
    </script>

